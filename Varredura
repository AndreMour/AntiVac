import os

# Função para verificar a existência de um arquivo em um diretório
def verificar_arquivo(diretorio, nome_arquivo):
    for root, dirs, files in os.walk(diretorio):
        caminho_arquivo = os.path.join(root, nome_arquivo)
        if os.path.exists(caminho_arquivo):
            print(f'O arquivo {nome_arquivo} foi encontrado em {caminho_arquivo}')
            decisao = input('Deseja excluir este arquivo? (S/N): ').strip().lower()
            if decisao == 's':
                excluir_arquivo(caminho_arquivo)
                print(f'O arquivo {nome_arquivo} foi excluído.')
            else:
                print(f'O arquivo {nome_arquivo} não foi excluído.')
            return  # Sai da função após verificar o arquivo

    print(f'O arquivo {nome_arquivo} não foi encontrado em {diretorio}')

# Função para excluir um arquivo
def excluir_arquivo(caminho):
    try:
        os.remove(caminho)
    except Exception as e:
        print(f"Erro ao excluir o arquivo {caminho}: {str(e)}")

# Solicita o nome do arquivo ao usuário
nome_arquivo = input('Digite o nome do arquivo a ser verificado: ')
diretorio = input('Digite o diretório a ser verificado: ')

# Chama a função para verificar o arquivo
verificar_arquivo(diretorio, nome_arquivo)
